{
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ESNext",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "incremental": false,
    "paths": {
      "@/*": ["./src/*"],
      "@example/*": ["./example/*"]
    }
  },
  "include": ["src/**/*.ts", "example/**/*.tsx", ".jest/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
