{
  "name": "@powerfulyang/lint",
  "version": "2.0.0",
  "description": "A collection of configuration files containing prettier, eslint, stylelint",
  "homepage": "https://github.com/powerfulyang/lint#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/powerfulyang/lint.git"
  },
  "bugs": {
    "url": "https://github.com/powerfulyang/lint/issues"
  },
  "author": {
    "name": "powerfulyang",
    "email": "i@powerfulyang.com",
    "url": "https://powerfulyang.com"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "eslint",
    "prettier",
    "stylelint"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "bin": {
    "install-peers": "./scripts/install-peers.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "prettier": "prettier \"{src,example}/**/*.{ts,tsx,scss}\" --write",
    "lint:js": "eslint --ext .ts,.tsx ./src --fix",
    "lint:style": "stylelint --fix \"example/*.scss\"",
    "prepublishOnly": "npm run build",
    "postprepare": "husky install",
    "tsc-check": "tsc --noEmit",
    "test": "jest",
    "precommit": "npm run tsc-check && lint-staged"
  },
  "dependencies": {
    "@commitlint/cli": "16.2.4",
    "@commitlint/config-conventional": "16.2.4",
    "@types/jest": "27.5.0",
    "@types/node": "17.0.31",
    "@types/react": "18.0.9",
    "@types/react-dom": "18.0.3",
    "@typescript-eslint/eslint-plugin": "5.22.0",
    "@typescript-eslint/parser": "5.22.0",
    "autoprefixer": "10.4.7",
    "cross-env": "7.0.3",
    "eslint": "8.15.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.1.5",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.5.0",
    "eslint-plugin-unicorn": "42.0.0",
    "husky": "7.0.4",
    "jest": "28.1.0",
    "jest-environment-jsdom": "^28.0.2",
    "lint-staged": "12.4.1",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.13",
    "postcss-scss": "4.0.4",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "rollup": "2.72.0",
    "sass": "1.51.0",
    "stylelint": "14.8.2",
    "stylelint-config-css-modules": "4.1.0",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard": "25.0.0",
    "stylelint-declaration-block-no-ignored-properties": "2.5.0",
    "stylelint-order": "5.0.0",
    "stylelint-prettier": "2.0.0",
    "stylelint-scss": "4.2.0",
    "tailwindcss": "3.0.24",
    "ts-jest": "28.0.1",
    "tsc-alias": "1.6.7",
    "tslib": "2.4.0",
    "typescript": "4.6.4"
  }
}
