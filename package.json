{
  "name": "@powerfulyang/lint",
  "version": "3.1.3",
  "description": "A collection of configuration files containing prettier, eslint, stylelint",
  "homepage": "https://github.com/powerfulyang/lint#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/powerfulyang/lint.git"
  },
  "bugs": {
    "url": "https://github.com/powerfulyang/lint/issues"
  },
  "author": {
    "name": "powerfulyang",
    "email": "i@powerfulyang.com",
    "url": "https://powerfulyang.com"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "eslint",
    "prettier",
    "stylelint"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json && tsc-alias",
    "prettier": "prettier \"{src,example}/**/*.{ts,tsx,scss}\" --write",
    "lint:js": "eslint --ext .ts,.tsx ./src --fix",
    "lint:style": "stylelint --fix \"example/*.scss\"",
    "prepublishOnly": "npm run build",
    "postprepare": "husky install",
    "tsc-check": "tsc --noEmit",
    "test": "jest",
    "precommit": "npm run tsc-check && lint-staged"
  },
  "devDependencies": {
    "@types/node": "18.15.11",
    "@types/react": "18.0.34",
    "@types/react-dom": "18.0.11",
    "typescript": "5.0.4"
  },
  "dependencies": {
    "@commitlint/cli": "17.5.1",
    "@commitlint/config-conventional": "17.4.4",
    "@swc/core": "1.3.49",
    "@swc/jest": "0.2.26",
    "@types/jest": "29.5.0",
    "@typescript-eslint/eslint-plugin": "5.58.0",
    "@typescript-eslint/parser": "5.58.0",
    "autoprefixer": "10.4.14",
    "cross-env": "7.0.3",
    "eslint": "8.38.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-import-resolver-typescript": "3.5.5",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-unicorn": "46.0.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "jest-environment-jsdom": "29.5.0",
    "lint-staged": "13.2.1",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.21",
    "postcss-scss": "4.0.6",
    "prettier": "2.8.7",
    "prettier-plugin-tailwindcss": "0.2.7",
    "rimraf": "5.0.0",
    "rollup": "3.20.2",
    "sass": "1.62.0",
    "stylelint": "15.4.0",
    "stylelint-config-css-modules": "4.2.0",
    "stylelint-config-standard": "31.0.0",
    "stylelint-declaration-block-no-ignored-properties": "2.7.0",
    "stylelint-order": "6.0.3",
    "stylelint-prettier": "3.0.0",
    "stylelint-scss": "4.6.0",
    "tsc-alias": "1.8.5",
    "tslib": "2.5.0"
  }
}
