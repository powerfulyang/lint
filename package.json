{
  "name": "@powerfulyang/lint",
  "version": "0.7.10",
  "description": "A collection of configuration files containing prettier, eslint, stylelint",
  "keywords": [
    "eslint",
    "prettier",
    "stylelint"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist",
    "install.js",
    ".editorconfig",
    ".eslintrc.js.template",
    ".prettierrc.js.template",
    ".stylelintrc.js.template",
    ".gitattributes.template",
    ".editorconfig.template"
  ],
  "scripts": {
    "patch-version": "npm version patch --no-git-tag-version",
    "postinstall": "node ./install.js",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "prettier": "prettier \"{src,example}/**/*.{ts,tsx,scss,json,js}\" --write",
    "lint:js": "eslint --ext .js,.jsx,.ts,.tsx --fix",
    "fix:style": "stylelint --fix \"example/*.scss\"",
    "prepublishOnly": "npm run build",
    "prepare": "husky install",
    "tsc": "tsc --noEmit",
    "precommit": "npm run lint:js && npm run prettier && npm run tsc"
  },
  "dependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.12",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.4.1",
    "eslint-config-airbnb": "^19.0.2",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-unicorn": "^39.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.4",
    "postcss": "^8.4.4",
    "postcss-scss": "^4.0.2",
    "prettier": "^2.5.1",
    "sass": "^1.44.0",
    "stylelint": "^14.1.0",
    "stylelint-config-css-modules": "^2.3.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.5.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^4.0.1",
    "tailwindcss": "^3.0.0",
    "ts-jest": "^27.1.1",
    "typescript": "^4.5.3"
  },
  "devDependencies": {
    "@types/react": "^17.0.37",
    "react": "^17.0.2"
  }
}
