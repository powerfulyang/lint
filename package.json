{
  "name": "@powerfulyang/lint",
  "version": "3.6.0",
  "description": "A collection of configuration files containing prettier, eslint, stylelint",
  "keywords": [
    "eslint",
    "prettier",
    "stylelint"
  ],
  "homepage": "https://github.com/powerfulyang/lint#readme",
  "bugs": {
    "url": "https://github.com/powerfulyang/lint/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/powerfulyang/lint.git"
  },
  "license": "MIT",
  "author": {
    "name": "powerfulyang",
    "email": "i@powerfulyang.com",
    "url": "https://powerfulyang.com"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json && tsc-alias",
    "lint:js": "eslint --ext .ts,.tsx ./src --fix",
    "lint:style": "stylelint --fix \"example/*.scss\"",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "prettier": "prettier \"{src,example}/**/*.{ts,tsx,scss}\" --write",
    "test": "jest",
    "tsc-check": "tsc --noEmit"
  },
  "dependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@swc/core": "^1.3.71",
    "@swc/jest": "^0.2.27",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "autoprefixer": "^10.4.14",
    "cross-env": "^7.0.3",
    "eslint": "^8.45.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "lint-staged": "^13.2.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.27",
    "postcss-scss": "^4.0.6",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "rimraf": "^5.0.1",
    "sass": "^1.64.1",
    "stylelint": "^15.10.2",
    "stylelint-config-css-modules": "^4.3.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.7.0",
    "stylelint-order": "^6.0.3",
    "stylelint-prettier": "^4.0.2",
    "stylelint-scss": "^5.0.1",
    "tsc-alias": "^1.8.7",
    "tslib": "^2.6.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.2",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^20.4.5",
    "@types/react": "^18.2.17",
    "@types/react-dom": "^18.2.7",
    "@types/testing-library__jest-dom": "^5.14.9",
    "expect": "^29.6.2",
    "typescript": "^5.1.6"
  },
  "publishConfig": {
    "access": "public"
  }
}
