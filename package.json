{
  "name": "@powerfulyang/lint",
  "version": "1.0.1",
  "description": "A collection of configuration files containing prettier, eslint, stylelint",
  "homepage": "https://github.com/powerfulyang/lint#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/powerfulyang/lint.git"
  },
  "bugs": {
    "url": "https://github.com/powerfulyang/lint/issues"
  },
  "author": {
    "name": "powerfulyang",
    "email": "i@powerfulyang.com",
    "url": "https://powerfulyang.com"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "eslint",
    "prettier",
    "stylelint"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "prettier": "prettier \"{src,example}/**/*.{ts,tsx,scss,json,js}\" --write",
    "lint:js": "eslint --ext .js,.jsx,.ts,.tsx ./src --fix",
    "lint:style": "stylelint --fix \"example/*.scss\"",
    "prepublishOnly": "npm run build",
    "prepare": "husky install",
    "tsc-chech": "tsc --noEmit",
    "precommit": "npm run tsc-chech && lint-staged"
  },
  "dependencies": {
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@types/jest": "27.4.1",
    "@types/node": "17.0.25",
    "@typescript-eslint/eslint-plugin": "5.20.0",
    "@typescript-eslint/parser": "5.20.0",
    "autoprefixer": "10.4.5",
    "eslint": "8.14.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-node": "0.3.6",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.1.5",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.4.0",
    "eslint-plugin-unicorn": "42.0.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "lint-staged": "12.4.0",
    "postcss": "8.4.12",
    "postcss-scss": "4.0.3",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "sass": "1.50.1",
    "stylelint": "14.7.1",
    "stylelint-config-css-modules": "4.1.0",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard": "25.0.0",
    "stylelint-declaration-block-no-ignored-properties": "2.5.0",
    "stylelint-order": "5.0.0",
    "stylelint-prettier": "2.0.0",
    "stylelint-scss": "4.2.0",
    "ts-jest": "27.1.4",
    "typescript": "4.6.3"
  },
  "devDependencies": {
    "@types/react": "18.0.6",
    "react": "18.0.0"
  }
}
