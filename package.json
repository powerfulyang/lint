{
  "name": "@powerfulyang/lint",
  "version": "0.5.0",
  "description": "A collection of configuration files containing prettier, eslint, stylelint",
  "keywords": [
    "eslint",
    "prettier",
    "stylelint"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist",
    "install.js",
    ".editorconfig",
    ".eslintrc.js.template",
    ".prettierrc.js.template",
    ".stylelintrc.js.template"
  ],
  "scripts": {
    "patch-version": "npm version patch --no-git-tag-version",
    "install": "node ./install.js",
    "build": "rimraf dist && tsc --build tsconfig.json",
    "prettier": "prettier \"src/**/*.ts\" --write",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --format=pretty ./src"
  },
  "dependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "autoprefixer": "^10.3.7",
    "eslint": "^8.1.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-formatter-pretty": "^4.1.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-compat": "^3.13.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-markdown": "^2.2.1",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-unicorn": "^37.0.1",
    "jest": "^27.3.1",
    "postcss": "^8.3.11",
    "postcss-sass": "^0.5.0",
    "prettier": "^2.4.1",
    "prettier-plugin-style-order": "^0.2.2",
    "sass": "^1.43.4",
    "stylelint": "^14.0.1",
    "stylelint-config-css-modules": "^2.3.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^23.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.4.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^1.2.0",
    "tailwindcss": "^2.2.17",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  }
}
